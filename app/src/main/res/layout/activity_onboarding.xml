<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="410sp"
        android:layout_height="435sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".2"
        android:src="@drawable/onboarding_image"
        android:id="@+id/patten"/>



    <TextView
        android:id="@+id/tvHead"
        android:layout_width="211sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/patten"
        app:layout_constraintBottom_toTopOf="@id/tvText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Find your  Comfort Food here"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="22sp"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="244sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvHead"
        app:layout_constraintBottom_toTopOf="@id/btNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Here You Can find a chef or dish for every taste and color. Enjoy!"
        android:fontFamily="@font/bentonsansbook"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="30sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="5sp"/>
    
    <Button
        android:id="@+id/btNext"
        android:layout_width="157sp"
        android:layout_height="57sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30sp"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="16sp"
        android:layout_marginTop="30sp"
        android:textColor="@color/white"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/btnbg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityOnboarding2"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="435sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias=".2"
            android:src="@drawable/onboarding_image2"
            android:id="@+id/patten"
            android:scaleType="fitXY"/>



        <TextView
            android:id="@+id/tvHead"
            android:layout_width="348sp"
            android:layout_height="58sp"
            app:layout_constraintTop_toBottomOf="@+id/patten"
            app:layout_constraintBottom_toTopOf="@id/tvText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Food Ninja is Where Your Comfort Food Lives"
            android:fontFamily="@font/bentonsansbold"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="20sp"
            android:lineSpacingExtra="5sp"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="244sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvHead"
            app:layout_constraintBottom_toTopOf="@id/btNext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Enjoy a fast and smooth food delivery at your doorstep"
            android:fontFamily="@font/bentonsansbook"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="5sp"/>

        <Button
            android:id="@+id/btNext"
            android:layout_width="157sp"
            android:layout_height="57sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/bentonsansbold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Next"
            android:textAllCaps="false"
            android:background="@drawable/btnbg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/pattern"
        android:rotation="203"
        android:layout_marginTop="-345dp"
        android:layout_marginLeft="100dp"
        android:lineSpacingExtra="5dp"/>

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/backicon"/>

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="264dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toBottomOf="@+id/backImg"
        app:layout_constraintStart_toStartOf="@id/backImg"
        android:text="Reset your password here"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvHead"
        app:layout_constraintStart_toStartOf="@id/tvHead"
        android:text="Select which contact details should we use to reset your password"
        android:fontFamily="@font/bentonsansbook"
        android:textSize="12dp"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:lineSpacingExtra="5dp"
        />

    <EditText
        android:id="@+id/etFName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/etbg"
        android:hint="New Password"
        android:paddingLeft="20dp"
        android:fontFamily="@font/bentonsansregular"
        android:textSize="14dp"
        />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/etFName"
        app:layout_constraintBottom_toBottomOf="@id/etFName"
        app:layout_constraintEnd_toEndOf="@id/etFName"
        android:layout_marginRight="20dp"
        android:src="@drawable/eyeicon"/>

    <EditText
        android:id="@+id/etLName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/etFName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/etbg"
        android:hint="Confirm Password"
        android:paddingLeft="20dp"
        android:fontFamily="@font/bentonsansregular"
        android:textSize="14dp"
        />

    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/eyegrey"
        app:layout_constraintBottom_toBottomOf="@id/etLName"
        app:layout_constraintEnd_toEndOf="@id/etLName"
        app:layout_constraintTop_toTopOf="@id/etLName" />

    <Button
        android:id="@+id/btNext"
        android:layout_width="157dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/btnbg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>
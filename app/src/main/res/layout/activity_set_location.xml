<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetLocationActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/pattern"
        android:rotation="203"
        android:layout_marginTop="-345dp"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/backicon"/>

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="264dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toBottomOf="@+id/backImg"
        app:layout_constraintStart_toStartOf="@id/backImg"
        android:text="Set Your Location"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvHead"
        app:layout_constraintStart_toStartOf="@id/tvHead"
        android:text="This data will be displayed in your account profile for security"
        android:fontFamily="@font/bentonsansbook"
        android:textSize="12dp"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/etbg">

        <ImageView
            android:id="@+id/locatLogo"
            android:layout_width="33dp"
            android:layout_height="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/location"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/locatLogo"
            app:layout_constraintBottom_toBottomOf="@id/locatLogo"
            app:layout_constraintStart_toEndOf="@id/locatLogo"
            android:layout_marginLeft="15dp"
            android:text="Your Location"
            android:fontFamily="@font/bentonsansmedium"
            android:textSize="15dp"
            android:textColor="@color/black"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cardbg"
            android:backgroundTint="#F6F6F6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Your Location"
                android:fontFamily="@font/bentonsansmedium"
                android:textSize="15dp"
                android:textColor="@color/black"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btNext"
        android:layout_width="157dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/btnbg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupProcessActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/signuprocessbg" />

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/backicon"/>

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="264dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toBottomOf="@+id/backImg"
        app:layout_constraintStart_toStartOf="@id/backImg"
        app:layout_constraintBottom_toTopOf="@id/tvText"
        android:text="Fill in your bio to get started"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15sp"
        android:gravity="start"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvHead"
        app:layout_constraintStart_toStartOf="@id/tvHead"
        app:layout_constraintBottom_toTopOf="@id/etFName"
        android:text="This data will be displayed in your account profile for security"
        android:fontFamily="@font/bentonsansbook"
        android:textSize="12dp"
        android:layout_marginBottom="30dp"
        android:gravity="start"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etFName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintBottom_toTopOf="@id/etLName"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/etbg"
        android:hint="First Name"
        android:paddingLeft="20dp"
        android:fontFamily="@font/bentonsansregular"
        android:textSize="14dp"
        />

    <EditText
        android:id="@+id/etLName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/etFName"
        app:layout_constraintBottom_toTopOf="@id/etMno"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/etbg"
        android:hint="Last Name"
        android:paddingLeft="20dp"
        android:fontFamily="@font/bentonsansregular"
        android:textSize="14dp"
        />

    <EditText
        android:id="@+id/etMno"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/etLName"
        app:layout_constraintBottom_toTopOf="@id/btNext"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="300sp"
        android:background="@drawable/etbg"
        android:hint="Mobile Number"
        android:paddingLeft="20dp"
        android:fontFamily="@font/bentonsansregular"
        android:textSize="14dp"
        />

    <Button
        android:id="@+id/btNext"
        android:layout_width="157dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toBottomOf="@id/etMno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/btnbg" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
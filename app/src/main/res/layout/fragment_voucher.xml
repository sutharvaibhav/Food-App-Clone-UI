<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VoucherFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-345dp"
        android:rotation="203"
        android:src="@drawable/pattern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/backicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bentonsansbold"
        android:gravity="start"
        android:text="Vouchar Promo"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@id/backImg"
        app:layout_constraintTop_toBottomOf="@id/backImg"/>

    <ImageView
        android:id="@+id/vouchar1"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@id/tvHead"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/voucher1"
        android:scaleType="fitXY"/>


    <ImageView
        android:id="@+id/vouchar2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@+id/vouchar1"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/voucher2"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/btNext"
        android:layout_width="0dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/vouchar1"
        app:layout_constraintEnd_toEndOf="@id/vouchar1"
        app:layout_constraintTop_toBottomOf="@id/vouchar2"
        android:layout_marginTop="300sp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/bentonsansbold"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/btnbg"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
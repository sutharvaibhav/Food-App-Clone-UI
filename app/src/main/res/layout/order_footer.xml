<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/greenbg"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp">

        <TextView
            android:id="@+id/subTotalTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonsansmedium"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="30sp"
            android:text="Sub-Total"/>

        <TextView
            android:id="@+id/subTValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/subTotalTv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/bentonsansmedium"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="120 $"/>

        <TextView
            android:id="@+id/delChTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonsansmedium"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/subTotalTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="30sp"
            android:text="Delivery Charge"/>

        <TextView
            android:id="@+id/delChValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/delChTv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/bentonsansmedium"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="10 $"/>

        <TextView
            android:id="@+id/disTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonsansmedium"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/delChTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="30sp"
            android:text="Discount"/>

        <TextView
            android:id="@+id/disValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/disTv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/bentonsansmedium"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="20 $"/>

        <TextView
            android:id="@+id/totalTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonsansbold"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/disTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="30sp"
            android:text="Total"/>

        <TextView
            android:id="@+id/totalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/totalTv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/bentonsansbold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="150$"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cardbg"
            android:fontFamily="@font/bentonsansbold"
            android:textSize="14sp"
            android:textColor="@color/theme1"
            android:text="Place My Order"
            android:textAllCaps="false"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>